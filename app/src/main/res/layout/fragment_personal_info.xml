<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
                xmlns:tools = "http://schemas.android.com/tools"
                android:layout_width = "match_parent"
                android:layout_height = "match_parent"
                xmlns:app = "http://schemas.android.com/apk/res-auto"
                tools:context = "com.zstu.natsukawa.fasterner.personalinfo.PersonalInfoFragment">


    <include android:id="@+id/basic_info"
        layout="@layout/basic_info_layout"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/dp_24"
        android:layout_marginEnd="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_12"/>

    <include
        android:layout_below="@id/basic_info"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginStart="@dimen/dp_24"
        android:layout_marginEnd="@dimen/dp_24"
        android:layout_centerHorizontal="true"
        layout="@layout/ability_level_layout"/>

</RelativeLayout>
